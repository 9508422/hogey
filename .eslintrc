{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "immutable",
    "import",
    "jsx-a11y",
    "promise",
    "react",
    "standard"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "standard",
    "standard-react"
  ],
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "immutable/no-mutation": 2,
    "immutable/no-let": 2,
    "immutable/no-this": 2
  }
}